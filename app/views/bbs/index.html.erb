<p id="notice"><%= notice %></p>

<h1>掲示板</h1>

<table>
  <thead>
    <tr>
      <!--
      <th>Name</th>
      <th>Comment</th>
      <th>Commented</th>
      <th colspan="3"></th>
      -->
    </tr>
  </thead>

  <tbody>
    <% @bbs.each do |bb| %>
      <tr>
        <td><%= bb.name %>: </td>
        <td><%= bb.comment %></td>
        <td><%= (bb.created_at).in_time_zone("Tokyo").strftime("%H:%M:%S %D") %></td>
        <td><%= link_to "編集", edit_bb_path(bb) %></td>
        <td><%= link_to "削除", bb, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

